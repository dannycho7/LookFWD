{
	"manifest_version": 2,
	"name": "LookFWD",
	"version": "0.1",
	"options_page": "options.html",
	"background": {
		"scripts": ["js/set_icon.js"]
	},
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/"],
			"js": ["js/youtube_home.js"]
		},
		{
			"matches": ["*://*.youtube.com/*"],
			"js": ["js/youtube_video.js"],
			"css": ["css/modal.css"],
			"run_at": "document_start"
		},
		{
			"matches": ["*://*.facebook.com/*"],
			"js": ["js/facebook.js"]
		}
	],
	"browser_action": {
		"default_icon": "img/off.png",
		"default_title": "LookFWD",
		"default_popup": "popup.html"
	}
}
